<Window x:Class="GORI.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GORI.Views"
        xmlns:viewModel="clr-namespace:GORI.ViewModels"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:conv="clr-namespace:GORI.Services"
        mc:Ignorable="d"
        Title="GORI" Height="700" Width="1300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="False">
    <Window.Resources>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                          From="0" To="1" Duration="0:0:0.5"/>
        </Storyboard>

        <Storyboard x:Key="FadeOutStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
              From="1" To="0"
              Duration="0:0:0.5" FillBehavior="Stop"/>
        </Storyboard>
    </Window.Resources>
    <Border BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBoderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBoderColor2}" Offset="0.5"/>
                <GradientStop Color="{StaticResource winBoderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <Grid.ColumnDefinitions>
                <!--Navigation menu-->
                <ColumnDefinition Width="250"/>
                <!--Content section-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                        <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>
                    <!--Logo-->
                    <StackPanel Orientation="Horizontal"
                    Height="35"
                    Margin="15,25,0,40">
                        <Image Source="/Images/PE.png" Height="30"/>
                        <TextBlock Text="GORI MACHINE"
                       Foreground="{StaticResource titleColor2}"
                       FontSize="16"
                       FontFamily="Montserrat"
                       FontWeight="Medium"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>
                        <TextBlock Text="v1.0"
                        Foreground="{StaticResource titleColor2}"
                        FontSize="10"
                        FontFamily="Montserrat"
                        FontWeight="Medium"
                        VerticalAlignment="Bottom"
                        Margin="10,0,0,0"/>

                    </StackPanel>
                    <!--Menu Buttons-->
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color12}"
                                 IsChecked="{Binding isCheckHomeView}"
                                 x:Name="ShowHomeViewCommand">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="HOME" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color7}"
                                 x:Name="ShowReportViewCommand">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="ChartPie" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="REPORT" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color13}"
                                 x:Name="ShowSettingViewCommand">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Tools" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="SETTING" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource color6}"
                                 x:Name="ShowHistoryViewCommand">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="History" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="HISTORY" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </Border>
            <Border Grid.Column="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                        <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource primaryBackColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <!--Control Bar-->
                        <RowDefinition Height="25"/>
                        <!--Header / Caption-->
                        <RowDefinition Height="35"/>
                        <!--Content section / Child views-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--Control Bar-->
                    <StackPanel x:Name="pnControlBar"
                    Grid.Row="0"
                    Orientation="Horizontal"
                    FlowDirection="RightToLeft"
                    Background="Transparent"
                    Margin="0,0,5,0"
                    MouseLeftButtonDown="pnControlBar_MouseLeftButtonDown"
                    Loaded="pnControlBar_Loaded">
                        <Button x:Name="AppClose" Style="{StaticResource controlButton}" Tag="{StaticResource color4}">
                            <fa:IconImage Icon="Xmark" Style="{StaticResource controlButtonIcon}"/>
                        </Button>
                        <Button x:Name="AppMaximine" Style="{StaticResource controlButton}" Tag="{StaticResource color6}">
                            <fa:IconImage Icon="Square" Style="{StaticResource controlButtonIcon}"/>
                        </Button>
                        <Button x:Name="AppMinimine" Style="{StaticResource controlButton}" Tag="{StaticResource color6}">
                            <fa:IconImage Icon="WindowMinimize" Width="12" Style="{StaticResource controlButtonIcon}"/>
                        </Button>
                    </StackPanel>

                    <!--Header / Caption-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <!--Caption-->
                        <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                            <Button x:Name="ExpandControlAuto" Background="Transparent" BorderThickness="0" Margin="35,0,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <fa:IconImage Icon="{Binding Icon}"
                                                  Height="20"
                                                  Width="20"
                                                  Foreground="{StaticResource color11}"
                                                  Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding Caption}"
                                               Foreground="{StaticResource color11}"
                                               FontSize="16"
                                               FontFamily="Montserrat"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                        </StackPanel>

                        <!--User options-->
                        <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        FlowDirection="RightToLeft"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0">

                            <Button Style="{StaticResource iconButton}"
                        Tag="{StaticResource color1}">
                                <fa:IconImage Icon="AngleDown" 
                                  Height="12"
                                  Width="12"
                                  Style="{StaticResource iconButtonIcon}"/>
                                <Button.ContextMenu>
                                    <ContextMenu Background="Pink">
                                        <MenuItem Header="Profile" />
                                        <MenuItem Header="Change Password" />
                                        <Separator/>
                                        <MenuItem Header="Log out"/>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                            <TextBlock Text="{Binding CurrentUserAccount}"
                           Foreground="{StaticResource titleColor2}"
                           FontFamily="Montserrat"
                           FontSize="12"
                           VerticalAlignment="Center"/>
                            <Ellipse Height="35" Width="35"
                         Stroke="{StaticResource color2}"
                         StrokeThickness="2"
                         FlowDirection="LeftToRight"
                         Margin="10,0,10,0">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding CurrentUserAccountIMG}"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Button Style="{StaticResource iconButton}"
                        Tag="{StaticResource color3}">
                                <fa:IconImage Icon="Clock" Style="{StaticResource iconButtonIcon}"/>
                            </Button>
                            <Button Style="{StaticResource iconButton}"
                        Tag="{StaticResource color4}">
                                <fa:IconImage Icon="Envelope" Style="{StaticResource iconButtonIcon}"/>
                            </Button>
                            <Button Style="{StaticResource iconButton}"
                        Tag="{StaticResource color5}">
                                <fa:IconImage Icon="Bell" Style="{StaticResource iconButtonIcon}"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!--Content section / Child views-->
                    <Grid  Grid.Row="2">
                        <ContentControl x:Name="ActiveItem"
                            Margin="25"></ContentControl>
                    </Grid>

                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
